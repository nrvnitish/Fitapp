<ProgressScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        MDLabel:
            text: "Track Your Progress"
            font_style: "H5"
            halign: "center"

        MDTextField:
            id: weight
            hint_text: "Current Weight (kg)"
            input_filter: 'float'
            mode: "rectangle"

        MDTextField:
            id: steps
            hint_text: "Steps Today"
            input_filter: 'int'
            mode: "rectangle"

        MDTextField:
            id: workouts
            hint_text: "Workouts Done"
            input_filter: 'int'
            mode: "rectangle"

        MDTextField:
            id: calories
            hint_text: "Calories Taken"
            input_filter: 'int'
            mode: "rectangle"

        MDRaisedButton:
            text: "Save Progress"
            pos_hint: {"center_x": 0.5}
            on_press: root.save_progress()

        MDLabel:
            id: status
            text: ""
            halign: "center"

        MDLabel:
            id: progress_result
            text: ""
            halign: "center"

        MDTextButton:
            text: "Back"
            pos_hint: {"center_x": 0.5}
            on_press: app.root.current = "home"