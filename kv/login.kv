<LoginScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        MDLabel:
            text: "Login"
            font_style: "H5"
            halign: "center"

        MDTextField:
            id: username
            hint_text: "Username"
            mode: "rectangle"

        MDTextField:
            id: password
            hint_text: "Password"
            mode: "rectangle"
            password: True

        MDRaisedButton:
            text: "Login"
            on_press: root.do_login()
            pos_hint: {"center_x": 0.5}

        MDLabel:
            id: status
            text: ""
            halign: "center"

        MDTextButton:
            text: "Signup"
            on_press: app.root.current = "signup"