<WorkoutScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15

        MDLabel:
            text: "Workout Plans"
            font_style: "H5"
            halign: "center"

        ScrollView:
            MDLabel:
                id: workout_list
                text: ""
                halign: "left"
                size_hint_y: None
                height: self.texture_size[1]

        MDTextField:
            id: new_workout
            hint_text: "Add New Workout"
            mode: "rectangle"

        MDRaisedButton:
            text: "Add"
            pos_hint: {"center_x": 0.5}
            on_press: root.add_workout()

        MDTextButton:
            text: "Back"
            pos_hint: {"center_x": 0.5}
            on_press: app.root.current = "home"